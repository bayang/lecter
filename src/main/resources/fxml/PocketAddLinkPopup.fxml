<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.bayang.reader.controllers.PocketAddLinkController">
   <children>
      <Label styleClass="settings-subtitle" text="%pocketAddLink">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Label>
      <JFXTextArea fx:id="linkField" prefRowCount="2" VBox.vgrow="SOMETIMES">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </JFXTextArea>
      <Label styleClass="text-bigger" text="%pocketAddLinkAddTag" />
      <HBox alignment="CENTER">
         <children>
            <JFXTextField fx:id="tagField" />
            <JFXButton fx:id="addTagButton" contentDisplay="GRAPHIC_ONLY" onAction="#addTag">
               <graphic>
                  <FontAwesomeIconView glyphName="PLUS" size="20" />
               </graphic>
            </JFXButton>
         </children>
      </HBox>
      <Label styleClass="text-bigger" text="%pocketAddLinkTags" />
      <FlowPane fx:id="tagsContainer" alignment="CENTER" />
      <JFXButton fx:id="submitButton" styleClass="generic-button" alignment="CENTER" buttonType="FLAT" onAction="#submitLink" text="%pocketAddLinkSubmit" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
